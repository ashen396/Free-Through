<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51e3ac"
    tools:context=".Payement_Successful">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp">

        <TextView
            android:id="@+id/tv_payement_successful"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:singleLine="false"
            android:text="Payement Successful"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/tv_room_price_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_payement_successful"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Rs."
            android:textSize="30dp" />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/tv_room_price_paid"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/ok_green"
            app:lottie_renderMode="software" />
    </RelativeLayout>

</RelativeLayout>