<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51e3ac"
    tools:context=".Payement_Successful">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="60dp">
        <TextView
            android:id="@+id/tv_payement_successful"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_width="170dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="34dp"
            android:layout_marginHorizontal="20dp"
            android:singleLine="false"
            android:text="Payement Successful"/>

        <TextView
            android:id="@+id/tv_room_price"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Rs.15000"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_payement_successful"
            android:layout_centerHorizontal="true"/>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:lottie_renderMode="software"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/ok_green"
            android:layout_below="@id/tv_room_price"/>
    </RelativeLayout>

</RelativeLayout>